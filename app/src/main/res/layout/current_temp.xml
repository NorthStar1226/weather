<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/reduce_rec"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/one_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="明天"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        />
        <TextView
            android:id="@+id/one_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="多云"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            >
        <TextView
            android:id="@+id/one_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="20℃"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            />
            <TextView
                android:id="@+id/one_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30℃"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/two_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="明天"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            />
        <TextView
            android:id="@+id/two_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="多云"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            >
            <TextView
                android:id="@+id/two_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="20℃"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/two_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30℃"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/three_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="2019-05-26"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            />
        <TextView
            android:id="@+id/three_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="多云"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            >
            <TextView
                android:id="@+id/three_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="20℃"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/three_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30℃"
                android:gravity="right"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>